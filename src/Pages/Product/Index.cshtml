@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Index page";
}

<div class="container">
    <a asp-page="Create" class="btn btn-link">+ Create</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Read</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                string[] titleparts = product.Title.Split('\n');
                <tr>
                    <td>@titleparts[0]</td>
                    <td><a asp-page="Read" asp-route-id="@product.Id">Read</a></td>
                    <td><a asp-page="Update" asp-route-id="@product.Id">Update</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
