@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.ReadModel

@{
    ViewData["Title"] = "Read page";
}

<h1>Read</h1>

<div class="content">
    <h5 class="title" id="productTitle">@Model.Product.Title</h5>
    <!-- Added by sheetal to resize image -->
    <img class="card-img" src='@Model.Product.Image' alt='Image for @Model.Product.Title' style="max-width: 35%; height: auto; display: block; margin: 0 auto;">
    <p class="card-text">@Model.Product.Description</p>
    <p class="card-text">Age: @Model.Product.Age</p>
    <div class="row">
        <div class="col-md-3">
            <a asp-page="Update" asp-route-id="@Model.Product.Id" class="btn btn-primary btn-block btn-sm">Update</a>
        </div>
        <div class="col-md-3">
            <form method="post" asp-page="Delete" asp-route-id="@Model.Product.Id" onsubmit="return confirm('Are you sure you want to delete this product?');">
                <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
            </form>
        </div>
    </div>
</div>
