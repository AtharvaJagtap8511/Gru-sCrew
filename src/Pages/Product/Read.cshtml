@page "{id}"

@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.ReadModel

@{
    ViewData["Title"] = "Read page";
}

<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="path/to/site.css">

<div class="container profile-info-container">
    <h3>Profile Information for @Model.Product.Title</h3>
    <div class="content">
        <div class="image-frame">
            <img class="profile-img mx-auto d-block" src='@Model.Product.Image' alt='Image for @Model.Product.Title'>
        </div>
        <p class="profile-description"><strong>@Model.Product.Description</strong></p>
        <p class="profile-skills"><strong>Skills:</strong> @Model.Product.Skills</p>
        <p class="profile-resume-link"><strong>Resume Link:</strong> <a href="@Model.Product.Url" target="_blank">@Model.Product.Title's Resume</a></p>
        <p class="profile-meetup-preference">
            <strong>Meetup Preference:</strong>
            <label>
                <input type="radio" name="meetupPreference" value="Virtual" disabled @(Model.Product.Preference == "Virtual" ? "checked" : "") /> Virtual
            </label>
            <label>
                <input type="radio" name="meetupPreference" value="Inperson" disabled @(Model.Product.Preference == "Inperson" ? "checked" : "") /> In Person
            </label>
        </p>
        <p class="profile-email"><strong>Email:</strong><a href="mailto:@Model.Product.Email" target="_blank">@Model.Product.Email</a></p>
        <p class="profile-age"><strong>Age:</strong> @Model.Product.Age</p>
        <div class="row">
            <div class="col-md-3 mx-auto">
                <a asp-page="Update" asp-route-id="@Model.Product.Id" class="update-btn btn btn-primary btn-block btn-sm">
                    <span style="font-size: 18px;"><strong>Update</strong></span>
                </a>
            </div>
        </div>
    </div>
</div>
