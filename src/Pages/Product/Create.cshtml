@page
@model ContosoCrafts.WebSite.Pages.Product.CreateModel
@{
    ViewData["Title"] = "Create page";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/custom-styles.css">
</head>

<h1>Create</h1>

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Product.Id)

        <div class="form-group">
            <label>Name</label>
            <input asp-for="Product.Title" class="form-control" />
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Skillset</label>
            <input asp-for="Product.Skills" class="form-control" />
            <span asp-validation-for="Product.Skills" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Product.Email" class="form-control" type="email" />
            <span asp-validation-for="Product.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Age</label>
            <input asp-for="Product.Age" class="form-control" />
            <span asp-validation-for="Product.Age" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Description" class="control-label">Description</label>
            <input asp-for="Product.Description" class="form-control" />
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="resumeLink">Resume Link</label>
            <input asp-for="Product.Url" id="resumeLink" class="form-control" pattern="https?://.+" title="Please enter a valid URL starting with 'http://' or 'https://'" />
            <span asp-validation-for="Product.Url" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Profile Picture</label>
            <input asp-for="Product.Image" class="form-control" />
            <span asp-validation-for="Product.Image" class="text-danger"></span>
        </div>

        <div class="form-group" style="display:inline-block">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-page="./Index" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</div>